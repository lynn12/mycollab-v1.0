<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>src</id>
    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <includes>
                <include>${project.groupId}:mycollab-parent-community:pom</include>
                <include>${project.groupId}:mycollab-core</include>
                <include>${project.groupId}:mycollab-dao</include>
                <include>${project.groupId}:mycollab-config</include>
                <include>${project.groupId}:mycollab-test</include>
                <include>${project.groupId}:mycollab-localization</include>
                <include>${project.groupId}:mycollab-caching</include>
                <include>${project.groupId}:mycollab-jackrabbit</include>
                <include>${project.groupId}:mycollab-migration</include>
                <include>${project.groupId}:mycollab-services</include>
                <include>${project.groupId}:mycollab-esb</include>
                <include>${project.groupId}:mycollab-reporting</include>
                <include>${project.groupId}:mycollab-scheduler</include>
                <include>${project.groupId}:mycollab-scheduler-community</include>
                <include>${project.groupId}:mycollab-servlet</include>
                <include>${project.groupId}:mycollab-client-api</include>
                <include>${project.groupId}:mycollab-ui</include>
                <include>${project.groupId}:mycollab-web</include>
                <include>${project.groupId}:mycollab-mobile</include>
                <include>${project.groupId}:mycollab-server-runner</include>
                <include>${project.groupId}:mycollab-services-community</include>
                <include>${project.groupId}:mycollab-web-community</include>
                <include>${project.groupId}:mycollab-app-community</include>
            </includes>
            <sources>
                <fileSets>
                    <fileSet>
                        <excludes>
                            <exclude>**/.idea/**</exclude>
                            <exclude>**/.settings/**</exclude>
                            <exclude>**/target/**</exclude>
                            <exclude>**/repo/**</exclude>
                            <exclude>**/repo2/**</exclude>
                            <exclude>**/repo-test/**</exclude>
                            <exclude>**/wiki-repo-test/**</exclude>
                            <exclude>**/bin/**</exclude>
                            <exclude>**/*.log</exclude>
                            <exclude>**/*.out*</exclude>
                            <exclude>**/.classpath</exclude>
                            <exclude>**/.project</exclude>
                            <exclude>**/.settings/**</exclude>
                            <exclude>**/.springBeans</exclude>
                            <exclude>**/nb-configuration.xml</exclude>
                            <exclude>**/proguard.conf</exclude>
                            <exclude>**/.gitignore</exclude>
                            <exclude>**/*.versionsBackup</exclude>
                            <exclude>**/*.iml</exclude>
                            <exclude>**/*.scss</exclude>
                        </excludes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <outputDirectory>mycollab-deployer-community</outputDirectory>
            <excludes>
                <exclude>**/.settings/**</exclude>
                <exclude>**/bin/**</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/.gitignore</exclude>
                <exclude>**/*.versionsBackup</exclude>
                <exclude>**/*.iml</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>